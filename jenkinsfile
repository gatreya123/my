pipeline{


agent any


stages{
stage('init '){
steps{
sh "terraform init"

}
}

stage ("promotion") {
steps{
script{
def userInput = input(id: 'userInput', message: 'Let\'s promote?', parameters: [ [$class: 'TextParameterDefinition', defaultValue: 'uat', description: 'Environment', name: 'env'] ])
}
echo ("Env: "+userInput['env'])
}
}

stage("terraform plan "){

steps{
sh "terraform plan"

}}}
}

